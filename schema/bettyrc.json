{
  "$schema":                "http://json-schema.org/draft-04/schema#",
  "type":                   "object",
  "properties": {
    "env": {
      "$ref":               "#/definitions/identifier"
    },
    "log_level": {
      "type":               "string",
      "enum":               [ "trace", "debug", "info", "warn", "error", "fatal" ]
    },
    "aws": {
      "type":               "object",
      "properties": {
        "accountId": {
          "type":           [ "string", "null" ]
        },
        "profile": {
          "type":           [ "string", "null" ]
        },
        "region": {
          "type":           [ "string", "null" ]
        }
      }
    },
    "build": {
      "type":               "object",
      "properties": {
        "unbundled": {
          "type":           "object",
          "patternProperties": {
            ".+": {
              "type":       "string"
            }
          }
        }
      }
    },
    "registry": {
      "type":               [ "object", "null" ],
      "required":           [ "command" ],
      "properties": {
        "command": {
          "type":           "string"
        },
        "argv": {
          "type":           "array",
          "items": {
            "type":         "string"
          }
        },
        "env": {
          "type":           "object",
          "patternProperties": {
            ".+": {
              "type":       "string"
            }
          }
        }
      }
    },
    "utils": {
      "type":               "object"
    }
  },
  "definitions": {
    "identifier": {
      "type":               "string",
      "minLength":          1,
      "pattern":            "^[\\w\\d][\\w\\d-]*$"
    }
  }
}
