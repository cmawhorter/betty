{
  "$schema":                "http://json-schema.org/draft-04/schema#",
  "type":                   "object",
  "additionalProperties":   false,
  "required":               [ "name" ],
  "properties": {
    // remove this; never used
    // or maybe switch it to service/component?
    "universe": {
      "$ref":               "#/definitions/identifier"
    },
    "name": {
      "$ref":               "#/definitions/identifier",
      "maxLength":          64
    },
    "description": {
      "type":               "string"
    },
    "repository": {
      "type":               [ "object", "string" ],
      "properties": {
        "type": {
          "type":           "string"
        },
        "url": {
          "type":           "string",
          "format":         "uri"
        }
      }
    },
    "author": {
      "$ref":               "#/definitions/person"
    },
    "contributors": {
      "type":               "array",
      "items": {
        "$ref":             "#/definitions/person"
      }
    },
    "maintainers": {
      "type":               "array",
      "items": {
        "$ref":             "#/definitions/person"
      }
    },
    // TODO: define the valid properties and also include on for target: lambda, lambdaedge
    // TODO: environment should require all strings
    // TODO: rename entry -> handler
    "configuration": {
      "type":               "object"
      // TODO: add vpc {}
      // TODO: add dlq: arn (or relative), dlq_service (either sqs or sns)
      // TODO: add tracing for tracing config
      // TODO: add s3 deploy target relative arn only
      // TODO: add role for the global_policy
      // TODO: timeout
    },
    // TODO: move this into configuration. two options; single string region, array of string regions
    "region": {
      "oneOf": [
        {
          "type":           "array",
          "items": {
            "$ref":         "#/definitions/identifier"
          }
        },
        {
          "$ref":           "#/definitions/identifier"
        }
      ]
    },
    "assets": {
      "type":               "array",
      "items": {
        "$ref":             "#/definitions/asset"
      }
    },
    "policy": {
      "type":               "array",
      "items": {
        "$ref":             "#/definitions/asset"
      }
    },
    "resources": {
      "type":               "object",
      "patternProperties": {
        ".+": {
          "$ref":           "#/definitions/version"
        }
      }
    },
    "client": {
      "type":               "string"
    },
    "health": {
      "type":               "string"
    },
    "manage": {
      "type":               "string"
    },
    "documentation": {
      "type":               "string"
    },
    "keywords": {
      "type":               "array",
      "items": {
        "type":             "string"
      }
    }
  },
  "definitions": {
    "person": {
      "type":               [ "object", "string" ],
      "required":           [ "name" ],
      "properties": {
        "name": {
          "type":           "string"
        },
        "phone": {
          "type":           "string"
        },
        "url": {
          "type":           "string",
          "format":         "uri"
        },
        "email": {
          "type":           "string",
          "format":         "email"
        }
      }
    },
    "identifier": {
      "type":               "string",
      "minLength":          1,
      "pattern":            "^[\\w\\d][\\w\\d-]*$"
    },
    "aws_identifier": {
      "type":               "string",
      "minLength":          1,
      "pattern":            "^([\\w\\d].*|\\*)$"
    },
    "version": {
      "type":               "string",
      "minLength":          1,
      "maxLength":          10,
      "pattern":            "^(\\*|\\d{4}\\-\\d{2}\\-\\d{2})$"
    },
    // TODO: add uid for each definition so that it is easy to sync
    "asset": {
      "type":               "object",
      "required":           [ "service", "name", "permissions" ],
      "properties": {
        "region": {
          "oneOf": [
            {
              "type":       "array",
              "items": {
                "$ref":     "#/definitions/aws_identifier"
              }
            },
            {
              "$ref":       "#/definitions/aws_identifier"
            }
          ]
        },
        "service": {
          "$ref":           "#/definitions/identifier"
        },
        "name": {
          "$ref":           "#/definitions/aws_identifier"
        },
        "permissions": {
          "type":           "array",
          "items": {
            "type":         "string"
          }
        }
      }
    }
  }
}
